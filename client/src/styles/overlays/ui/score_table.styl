#score_table
    background: rgba(0,0,0,0.8);
    color: white;
    display: none;
    position: absolute;
    top: 18dvw;
    left: 18dvw;
    width: 64dvw;
    height: auto;
    z-index: 5;

    &.active
        display: block

    button
        background: black;
        border-radius: 32px;
        font-size: 1.5rem
        color: white;
        position: absolute;
        width: 48px;
        height: 48px;
        right: 0;
        top: 0;
        margin-right: -16px;
        margin-top: -16px;

    h2
        padding 1rem

    table
        border-spacing: 1rem
        width 100%