#game_overlay,
#ui_overlay {
    position: absolute;
    z-index: 5;
    display: flex;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    align-items: center;
    justify-content: center;
}

#ui_overlay > div {
    pointer-events: all;
}

#ui_overlay #main_menu .tp-rotv {
    position: absolute;
    top: 8px;
    right: 8px;
}

#ui_overlay #main_menu .tp-rotv-expanded {
    position: relative;
    font-size: 20px;
    --cnt-hp: var(--tp-container-horizontal-padding, 10px);
    --cnt-vp: var(--tp-container-vertical-padding, 10px);
    --cnt-usp: var(--tp-container-unit-spacing, 10px);
    --cnt-usz: var(--tp-container-unit-size, 40px);
}

#game_overlay {
    z-index: 4;
    .scanner-target {
        position: absolute;
        z-index: 0;
        .symbol {
            border: solid 1px rgba(0, 255, 0, 1);
            width: 10px;
            height: 10px;
            transform: rotate(45deg);
        }
    }
}

