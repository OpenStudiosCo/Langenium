#game_overlay,
#ui_overlay {
    position: absolute;
    z-index: 5;
    display: flex;
    width: 100vw;
    height: 100vh;
    pointer-events: none;
    align-items: center;
    justify-content: center;
}

#ui_overlay > div {
    pointer-events: all;
}

#ui_overlay #main_menu .tp-rotv {
    position: absolute;
    top: 8px;
    right: 8px;
}

#ui_overlay #main_menu .tp-rotv-expanded {
    position: relative;
    font-size: 20px;
    --cnt-hp: var(--tp-container-horizontal-padding, 10px);
    --cnt-vp: var(--tp-container-vertical-padding, 10px);
    --cnt-usp: var(--tp-container-unit-spacing, 10px);
    --cnt-usz: var(--tp-container-unit-size, 40px);
}

#game_overlay {
    z-index: 4;
    .scanner-target {
        position: absolute;
        z-index: 0;
        
        .targeting-effect {
            display: none;
            width: 40px;
            height: 40px;
            position: absolute;
            right: -12px;
            bottom: -12px;
            animation: scale 0.3s infinite ease-in-out;

            ^[-1].active ^[2..2] {
                display: block;
            }

            .border {
                border-radius: 100%;
                border: dashed 1px rgba(200, 0, 200, 1);
                width: 100%;
                height: 100%;
                animation: rotate 2.5s infinite linear;
            }

        }
        .symbol {
            background: none;
            border: solid 1px rgba(0, 0, 200, 1);
            width: 10px;
            height: 10px;
            transform: rotate(45deg);

            ^[-1].active ^[2..2] {
                background: rgba(200, 0, 200, 0.5);
                border: solid 1px rgba(200, 0, 200, 1);
            }
        }

    }
}

@keyframes rotate {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

@keyframes scale {
    0%, 100% {
        transform: scale(0.8);
    }
    50% {
        transform: scale(1.2);
    }
}
