:stylus(wrap=true)
    .modal {
        position: absolute;
        z-index: 4;
        font-family: monospace;
        text-shadow: 1px 1px grey;
        background: rgba(0,0,0,0.25);
        resize: both;
        overflow: auto;
        color: #CCC;
        pointer-events: bounding-box;
        backdrop-filter: blur(2px);
        border: solid 1px rgba(0,0,0,0.25);

        .header {
            background: rgba(0,0,0,0.25);
            display: flex;
            justify-content: space-between;
            padding: .5rem 0;
            img {
                margin: 0 .5rem 0 0.75rem;
                filter: invert(1);
            }
            strong {
                margin: 0 1rem;
            }
        }

        .header:hover {
            background: rgba(0,0,0,0.5);
            cursor: pointer;
        }

        table {
            margin: 0.5rem;
            width: calc(100% - 1rem);
            transition: all 0.4s ease-in-out;

            thead {
                background: rgba(0,0,0,0.25);
                color: #FFFFFF;
            }

            &, td {
                border: 1px solid rgba(0,0,0,0.25);
                border-collapse: collapse;
            }
            

            td {
                padding: 0.125rem 0.5rem;
            }
        }

        table,
        .modal_controls {
            display: none;
        }

        &.expanded {

            .header:hover {
                background: rgba(0,0,0,0.25);
                cursor: default;
            }

            table {
                display: table;
            }
            .modal_controls {
                display: block;
            }
        }

        

        

    }
    #ui-targeting-list {
        top: 1vh;
        left: 1vw;

        button {
            background: rgba(1,1,1,0.1);
            border-radius: 16px;
            padding: 0.125rem 0.25rem 0;
            pointer-events: auto;
            color: #FFF;
        }
    }
