:stylus(wrap=true)
    #ui-targeting-locked {
        display: flex;
        justify-content: center;
        position: absolute;
        bottom: 1dvh;
        left: 20dvw;
        width: 60dvw;
        height: 10dvh;
        border-radius: 1% / 5%;
        z-index: 2;
        pointer-events: none;

        .target {
            border: solid 1px rgba(0,0,0,0.125);
            color: rgba(0,0,0,0.5);
            font-family: monospace;
            margin: 0.25rem;
            padding: 0.25rem;
            width: 8dvw;
            pointer-events: auto;

            &:hover {
                border: solid 1px rgba(0,0,0,0.5);
                color: #000;
                cursor: pointer;
            }

            .icon {
                width: auto;
                height: 60%;

                &.neutral {
                    display: block;
                    filter: hue-rotate(73deg) brightness(4.0);
                }
            }

            .health_bar {
                margin: -.25rem;
                background: #00FF00;
                width: calc(100% + 0.5rem);
                height: 5px;
            }
        }
        
    }
